run = "bash run.sh"
entrypoint = "run.sh"

[nix]
channel = "stable-23_11"

[env]
PYTHONPATH = "${PYTHONPATH}:/home/runner/${REPL_SLUG}/backend"
FLASK_ENV = "production"
PORT = "5000"

[packager]
language = "python3"

[packager.features]
packageSearch = true
guessImports = true

[languages]
[languages.python]
pattern = "**/*.py"
syntax = "python"

[languages.javascript]
pattern = "**/*.js"
syntax = "javascript"

[languages.css]
pattern = "**/*.css"
syntax = "css"

[languages.html]
pattern = "**/*.html"
syntax = "html"